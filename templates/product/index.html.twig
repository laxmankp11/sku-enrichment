{# templates/product/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="mb-4">All Products</h2>
        <a href="{{ path('product_add') }}" class="btn btn-success mb-3">Add Product</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>SKU</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.sku }}</td>
                    <td>{{ product.name }}</td>
                    <td>
                        <a href="{{ path('product_view', {id: product.id}) }}" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
